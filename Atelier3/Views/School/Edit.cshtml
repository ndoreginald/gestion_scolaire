@model Atelier3.Models.School

@{
    ViewData["Title"] = "Edit School";
}

<h1 class="my-4">Edit School</h1>

<h4 class="mb-3">Modify the details below</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="SchoolID" />

            <div class="form-group">
                <label asp-for="SchoolName" class="control-label">School Name</label>
                <input asp-for="SchoolName" class="form-control" placeholder="Enter the school's name" />
                <span asp-validation-for="SchoolName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SchoolAdress" class="control-label">School Address</label>
                <input asp-for="SchoolAdress" class="form-control" placeholder="Enter the school's address" />
                <span asp-validation-for="SchoolAdress" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Save Changes" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
